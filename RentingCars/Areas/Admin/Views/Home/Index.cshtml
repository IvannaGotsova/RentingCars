@{
    ViewData["Title"] = "Admin Home Page";
}

<div class="mt-4 p-5 bg-light text-center">
    <h2 class="display-4">Hello, Admin!</h2>
    <p class="lead mb-1 mt-3">
        This is your administrator area where you can manage cars.
    </p>
    <p class="lead mt-1">
        You can see <b>all users and agents</b> and <b>all rents</b> in the system.
    </p>
    <hr class="my-4">
    <a asp-area="" asp-controller="Cars" asp-action="All"
       class="btn btn-primary btn-lg">All Cars</a>
    <a asp-area="" asp-controller="Cars" asp-action="Add"
       class="btn btn-primary btn-lg">Add Car</a>
    <span>  |   </span>
    <a asp-area="Admin" asp-controller="Cars" asp-action="Mine"
       class="btn btn-primary btn-lg">My Cars</a>
    <span>  |   </span>
    <a asp-area="Admin" asp-controller="Rents" asp-action="All"
       class="btn btn-primary btn-lg">All Rents</a>
    <a asp-area="Admin" asp-controller="Users" asp-action="All"
       class="btn btn-primary btn-lg">All Users</a>
</div>