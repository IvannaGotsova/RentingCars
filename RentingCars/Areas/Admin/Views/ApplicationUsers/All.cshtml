@model IEnumerable<ApplicationUserServiceModel>

@{
    ViewBag.Title = "All Users";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<table class="table table-striped">
    <thead>
        <tr>
            <th><label>Email</label></th>
            <th><label>Full Name</label></th>
            <th><label>Phone Number</label></th>
            <th><label>User Is Broker</label></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td><label>@user.ApplicationUserEmail</label></td>
                <td><label>@user.ApplicationUserFullName</label></td>
                <td><label>@user.ApplicationUserPhoneNumber</label></td>
                <td>
                    @if (user.ApplicationUserPhoneNumber != string.Empty)
                    {
                        <label class="text-center">✔</label>
                    }
                    else
                    {
                        <label class="text-center">❌</label>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>